{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Tárgyfelvétel</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Tantárgy neve</th>
            <th>Státusz</th>
            <th>Leírás</th>
            <th>Kredit</th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td>{{subjectname}}</td>
            {{#if signedup}}
                <td><span class="label label-success">Jelentkezett</span></td>
                <td>{{description}}</td>
                <td>{{creditvalue}}</td>
                <td><a href="resign{{id}}" class="btn btn-default">Tantárgy leadása</a></td>
            {{else}}
                <td><span class="label label-danger">Nem jelentkezett</span></td>
                <td>{{description}}</td>
                <td>{{creditvalue}}</td>
                <td><a href="signup{{id}}" class="btn btn-default">Tantárgy felvétele</a></td>
            {{/if}}
            
            
        </tr>
        {{/each}}
    </tbody>
</table>