{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Összes tantárgy</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Tantárgy neve</th>
            <th>Leírás</th>
            <th>Kredit</th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td>{{subjectname}}</td>
            <td>{{description}}</td>
            <td>{{creditvalue}}</td>
            <td><a href="edit{{id}}"><button class="btn btn-default">Tantárgy szerkesztése</button></a>
            <a href="delete{{id}}"><button class="btn btn-default">Tantárgy törlése</button></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>